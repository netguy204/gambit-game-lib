<items>
  <item name="alpha-reactor">
    <produces name="heat" rate="10" />
    <produces name="power" rate="100" />
    <consumes name="fuel" rate="10" />
    <requires name="space" value="10" />
  </item>

  <item name="alpha-battery">
    <maxcapacity name="power" value="500" />
    <requires name="space" value="5" />
  </item>

  <item name="fuel-storage">
    <maxcapacity name="fuel" value="200" />
    <requires name="space" value="10" />
  </item>

  <item name="heat-sink">
    <updatefn name="heatsink_update" />
    <quality value="0.30" />
    <requires name="space" value="10" />
  </item>

  <item name="alpha-laser">
    <activatefn name="laser_fire" />
    <requires name="space" value="10" />
    <quality value="0.5" />
  </item>

  <system name="alpha-power">
    <component name="alpha-battery" />
    <component name="alpha-reactor" />
    <component name="heat-sink" />
    <maxcapacity name="heat" value="40" />
  </system>

  <system name="alpha-hull">
    <component name="alpha-power" />
    <component name="fuel-storage" />
    <component name="alpha-laser" />
    <provides name="space" value="50" />
  </system>

</items>
